@model List<Animal>

    <div>
        <h1>All Available Animals</h1>
    <ul>
    @{
        foreach(Animal a in Model)
        {
            <p>------</p>
            <h3>@a.Name</h3>
            <p><a asp-controller="Adoption" asp-action="RemoveAnimal" asp-route-id="@a.Id">Adopt Me</a></p>
            <img height="500px" src="@a.Img" />

            <p>@a.Description</p>


        }

        }

    </ul>
</div>